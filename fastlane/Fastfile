# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    increment_build_number(xcodeproj: "I am Groot.xcodeproj")
    build_app(
      scheme: "I am Groot",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "io.appnap.iamgroot" => "Sarwar Apple Distribution - I am Groot"
        }
      }
    )
    upload_to_testflight(
      skip_waiting_for_build_processing: false,
      username: ENV["APPLE_ID"],
      password: ENV["APP_SPECIFIC_PASSWORD"]
    )
    set_app_encryption_declaration(
      app_identifier: "io.appnap.iamgroot",
      username: ENV["APPLE_ID"],
      team_id: "L3D3A22YK5",
      uses_encryption: false,
      export_compliance_uses_encryption: false,
      encryption_updated: false,
      is_exempt: false,
      contains_third_party_cryptography: false,
      available_on_french_store: true
    )
  end
end



